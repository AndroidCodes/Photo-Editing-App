<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidcodes.photoeditingapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/app_launch_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.androidcodes.photoeditingapp.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="luminous.ACTION_MULTIPLE_PICK" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidcodes.photoeditingapp.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="luminous.ACTION_MULTIPLE_PICK" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidcodes.photoeditingapp.Frames.CustomGallery.Temp.CustomGalleryActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="luminous.ACTION_MULTIPLE_PICK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.androidcodes.photoeditingapp.Frames.CustomGallery.New_CustomGallery"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.androidcodes.photoeditingapp.Frames.Fragments.Fragement_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.androidcodes.photoeditingapp.Frames.EditImages.Edit_Images"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.androidcodes.photoeditingapp.Save_Frame_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.androidcodes.photoeditingapp.Album_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.androidcodes.photoeditingapp.View_AlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.androidcodes.photoeditingapp.PIP.PIP_Effect_Activity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
